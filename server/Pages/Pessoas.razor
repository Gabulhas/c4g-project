@page "/pessoas"
@layout MainLayout
@inherits C4G.Pages.PessoasComponent

@using Radzen
@using Radzen.Blazor
@using C4G.Models.C4G
@using Microsoft.AspNetCore.Identity
@using C4G.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Pessoas">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getPessoasResult" TItem="C4G.Models.C4G.Pessoa" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="C4G.Models.C4G.Pessoa" Property="id_pessoa" Title="Id Pessoa">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="C4G.Models.C4G.Pessoa" Property="nome" Title="Nome">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="C4G.Models.C4G.Pessoa" Property="morada" Title="Morada">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="C4G.Models.C4G.Pessoa" Property="email" Title="Email">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="C4G.Models.C4G.Pessoa" Property="id_instituicao" SortProperty="Instituico.designacao" FilterProperty="Instituico.designacao" Title="Instituico">
              <Template Context="data">
              @(data.Instituico?.designacao)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="C4G.Models.C4G.Pessoa" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="c4GModelsC4GPessoa">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, c4GModelsC4GPessoa))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
