@page "/indisponibilidades"
@layout MainLayout
@inherits C4G.Pages.IndisponibilidadesComponent

@using Radzen
@using Radzen.Blazor
@using C4G.Models.C4G
@using Microsoft.AspNetCore.Identity
@using C4G.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Indisponibilidades">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getIndisponibilidadesResult" TItem="C4G.Models.C4G.Indisponibilidade" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="C4G.Models.C4G.Indisponibilidade" Property="start_date" FormatString="{0:MM/dd/yyyy}" Title="Start Date">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="C4G.Models.C4G.Indisponibilidade" Property="end_date" FormatString="{0:MM/dd/yyyy}" Title="End Date">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="C4G.Models.C4G.Indisponibilidade" Property="id_pedido" SortProperty="Pedido.id_pedido" FilterProperty="Pedido.id_pedido" Title="Pedido">
              <Template Context="data">
              @(data.Pedido?.id_pedido)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="C4G.Models.C4G.Indisponibilidade" Property="id_recursos" SortProperty="Recurso.id_recursos" FilterProperty="Recurso.id_recursos" Title="Recurso">
              <Template Context="data">
              @(data.Recurso?.id_recursos)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="C4G.Models.C4G.Indisponibilidade" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="c4GModelsC4GIndisponibilidade">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, c4GModelsC4GIndisponibilidade))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
