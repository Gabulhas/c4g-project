{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Designacao",
                              "component": "designacao",
                              "name": "designacaoLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "designacao",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${instituico.designacao}"
                            },
                            {
                              "type": "required-validator",
                              "name": "designacaoRequiredValidator",
                              "component": "designacao",
                              "text": "designacao is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Acronimo",
                              "component": "acronimo",
                              "name": "acronimoLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 10,
                              "type": "textbox",
                              "name": "acronimo",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${instituico.acronimo}"
                            },
                            {
                              "type": "required-validator",
                              "name": "acronimoRequiredValidator",
                              "component": "acronimo",
                              "text": "acronimo is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to update Instituico",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "c4g.updateInstituico",
                        "parameters": [
                          {
                            "name": "id_instituicao",
                            "value": "${parameters.id_instituicao}"
                          },
                          {
                            "name": "Instituico",
                            "value": "${instituico}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${instituico}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "C4G.Models.C4G.Instituico",
                  "data": "${instituico}",
                  "visible": "${instituico != null}"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "c4g.getInstituicoByid_instituicao",
        "parameters": [
          {
            "name": "id_instituicao",
            "value": "${parameters.id_instituicao}"
          }
        ],
        "then": [
          {
            "name": "instituico",
            "type": "set",
            "value": "${result}",
            "valueType": "C4G.Models.C4G.Instituico"
          }
        ],
        "error": [],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Instituico",
  "layout": "Main",
  "access": [
    "Authenticated"
  ]
}